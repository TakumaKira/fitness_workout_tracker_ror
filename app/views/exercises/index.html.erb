<div class="max-w-4xl mx-auto p-4">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">My Exercises</h1>
    <%= link_to "New Exercise", new_exercise_path, 
        class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <div class="space-y-4">
    <% @exercises.each do |exercise| %>
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-xl font-semibold"><%= exercise.name %></h2>
            <% if exercise.description.present? %>
              <p class="mt-2 text-gray-600"><%= exercise.description %></p>
            <% end %>
          </div>
          <div class="flex space-x-2">
            <%= link_to "Edit", edit_exercise_path(exercise), 
                class: "text-blue-500 hover:text-blue-600" %>
            <%= button_to "Delete", exercise_path(exercise),
                method: :delete,
                class: "text-red-500 hover:text-red-600",
                form: { data: { turbo_confirm: "Are you sure?" } } %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @exercises.empty? %>
      <div class="text-center py-12 bg-white shadow rounded-lg">
        <p class="text-gray-500">
          No exercises yet. <%= link_to "Create your first exercise", new_exercise_path, 
              class: "text-blue-500 hover:text-blue-600" %>
        </p>
      </div>
    <% end %>
  </div>
</div> 